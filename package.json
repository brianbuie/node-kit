{
  "name": "@brianbuie/node-kit",
  "version": "0.13.0",
  "license": "ISC",
  "description": "Basic tools for Node.js projects",
  "author": "Brian Buie <brian@buie.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianbuie/node-kit.git"
  },
  "scripts": {
    "build": "prettier . -w && tsdown && ts2md --firstHeadingLevel=1",
    "test": "tsc && node --test \"src/*.test.ts\" --quiet",
    "preversion": "npm test && npm run build",
    "postversion": "git push --follow-tags"
  },
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json",
    "prettier.config.ts"
  ],
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.9.1",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "extract-domain": "^5.0.2",
    "fast-csv": "^5.0.5",
    "format-duration": "^3.0.2",
    "lodash-es": "^4.17.21",
    "mime-types": "^3.0.2",
    "quicktype-core": "^23.2.6",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "ts2md": "^0.2.8",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  }
}
